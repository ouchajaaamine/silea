{
  "family": "silea-backend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::442147575154:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::442147575154:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "mysql",
      "image": "mysql:8.0",
      "essential": true,
      "environment": [
        {
          "name": "MYSQL_DATABASE",
          "value": "silea_db"
        }
      ],
      "secrets": [
        {
          "name": "MYSQL_ROOT_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:eu-west-3:442147575154:secret:silea/db/password-60QwN5"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/silea-backend",
          "awslogs-region": "eu-west-3",
          "awslogs-stream-prefix": "mysql"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "mysqladmin ping -h localhost"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    },
    {
      "name": "phpmyadmin",
      "image": "phpmyadmin:latest",
      "essential": false,
      "dependsOn": [
        {
          "containerName": "mysql",
          "condition": "HEALTHY"
        }
      ],
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "PMA_HOST",
          "value": "localhost"
        },
        {
          "name": "PMA_PORT",
          "value": "3306"
        },
        {
          "name": "PMA_USER",
          "value": "root"
        }
      ],
      "secrets": [
        {
          "name": "PMA_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:eu-west-3:442147575154:secret:silea/db/password-60QwN5"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/silea-backend",
          "awslogs-region": "eu-west-3",
          "awslogs-stream-prefix": "phpmyadmin"
        }
      }
    },
    {
      "name": "silea-backend",
      "image": "442147575154.dkr.ecr.eu-west-3.amazonaws.com/silea-backend:latest",
      "essential": true,
      "dependsOn": [
        {
          "containerName": "mysql",
          "condition": "HEALTHY"
        }
      ],
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "prod"
        },
        {
          "name": "SPRING_DATASOURCE_URL",
          "value": "jdbc:mysql://localhost:3306/silea_db"
        },
        {
          "name": "SPRING_JPA_HIBERNATE_DDL_AUTO",
          "value": "update"
        }
      ],
      "secrets": [
        {
          "name": "SPRING_DATASOURCE_USERNAME",
          "valueFrom": "arn:aws:secretsmanager:eu-west-3:442147575154:secret:silea/db/username-NtFsA0"
        },
        {
          "name": "SPRING_DATASOURCE_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:eu-west-3:442147575154:secret:silea/db/password-60QwN5"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/silea-backend",
          "awslogs-region": "eu-west-3",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8080/actuator/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
